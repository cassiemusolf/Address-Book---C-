<h1>Address Book</h1>
@if (@Model.Count == 0)
{
  <h3>No contacts have been added yet!</h3>
}

  @foreach (var contact in Model)
  {
    <h3><a href="/contacts/@contact.GetId()">@contact.GetName()</a></h3>
  }


<a href='/contacts'>Add a New Contact</a>
<form action="/contacts/clear" method="post">
<button type='submit' name='clear'>Clear All Contacts</button>
</form>
