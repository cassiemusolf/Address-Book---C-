@{
  Layout="Shared/_Layout.cshtml";
}
<div class="container">
  <div class="jumbotron">
    <h1>Address Book</h1>
  </div>
  <h2><strong>Add a New Contact:</strong></h2>

  <div class="form-group">
    <form action='/contacts' method='post'>
      <label for='contact-name'>Contact Name</label>
      <input id='contact-name' name='contact-name' type='text'>
    </div>
    <div class="form-group">
      <label for='contact-address'>Home Address</label>
      <input id='contact-address' name='contact-address' type='text'>
    </div>
    <div class="form-group">
      <label for='contact-phone'>Phone Number</label>
      <input id='contact-phone' name='contact-phone' type='text'>
    </div>
      <button type='submit' class="btn-lg btn-primary" name='add'>Add a Contact</button>
    </form>
  </div>

  <h2><a href='/contacts'>See Your Contact List</a></h2>
  <h2><a href='/'>Return to the Main Page</a></h2>
</div>
